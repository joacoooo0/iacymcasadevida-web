---
import { Image } from "astro:assets";

interface Props {
  titleCard: String;
  horaCard: String;
  direccionCard: String;
  imageExample: ImageMetadata;
}

const { titleCard, horaCard, direccionCard, imageExample } = Astro.props;
---

<div class="flex flex-col">
  <div>
    <Image
      src={imageExample}
      alt="bg-reunion-general"
      class="w-[504px] rounded-t-2xl"
    />
  </div>
  <div
    class="bg-[#0059AD] xl:w-[504px] w-[300px] xl:h-[240px] h-[300px] text-white flex flex-col items-start justify-center rounded-b-2xl gap-y-5 p-[43px]"
  >
    <h1 class="xl:text-[33px] text-xl font-bold">{titleCard}</h1>
    <h3 class="text-center xl:text-[28px] text-xs font-light">{horaCard}</h3>
    <p class="font-light text-[17px]">{direccionCard}</p>
  </div>
</div>
